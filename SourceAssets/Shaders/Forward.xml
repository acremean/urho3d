<shaders>
    <shader name="Forward" type="vs">
        <option name="Unlit" define="UNLIT">
            <exclude name="Normal" />
            <exclude name="Spot" />
            <exclude name="Shadow" />
        </option>
        <option name="Normal" define="NORMALMAP" />
        <option name="Spot" define="SPOTLIGHT" />
        <option name="Shadow" define="SHADOW" />
        <variation name="" />
        <variation name="Skinned" define="SKINNED" />
        <variation name="Instanced" define="INSTANCED" />
    </shader>
    <shader name="Forward" type="ps">
        <option name="Diff" define="DIFFMAP" />
        <option name="Normal" define="NORMALMAP" />
        <option name="SpecMap" define="SPECMAP" include="Spec" />
        <variation name="Ambient" define="AMBIENT">
            <exclude name="Normal" />
            <exclude name="Spec" />
            <exclude name="SpecMap" />
        </variation>
        <variation name="Unlit" define="UNLIT">
            <exclude name="Normal" />
            <exclude name="Spec" />
            <exclude name="SpecMap" />
        </variation>
        <variation name="Dir">
            <define name="DIRLIGHT" />
            <define name="LIGHT" />
        </variation>
        <variation name="Spot">
            <define name="SPOTLIGHT" />
            <define name="LIGHT" />
        </variation>
        <variation name="Point">
            <define name="POINTLIGHT" />
            <define name="LIGHT" />
        </variation>
        <option name="Mask" define="CUBEMASK" require="POINTLIGHT" />
        <option name="Shadow" define="SHADOW" require="LIGHT" />
        <option name="Negative" define="NEGATIVE">
            <exclude name="Normal" />
            <exclude name="Shadow" />
            <exclude name="Spec" />
            <exclude name="SpecMap" />
        </option>
        <variation name="DirShadow">
            <define name="DIRLIGHT" />
            <define name="SHADOW" />
        </variation>
        <variation name="DirNegative">
            <define name="DIRLIGHT" />
            <define name="NEGATIVE" />
        </variation>
        <option name="Spec" define="SPECULAR" />
        <option name="HW" define="HWSHADOW" require="SHADOW" />
    </shader>
</shaders>
