<shaders>
    <shader name="Billboard" type="vs">
        <option name="Spot" define="SPOTLIGHT" />
    </shader>
    <shader name="Billboard" type="ps">
        <option name="Diff" define="DIFFMAP" />
        <variation name="Unlit" define="UNLIT" exclude="Spec" />
        <variation name="Additive" define="ADDITIVE" exclude="Spec" />
        <variation name="Ambient" define="AMBIENT" exclude="Spec" />
        <variation name="Dir">
            <define name="DIRLIGHT" />
            <define name="LIGHT" />
        </variation>
        <variation name="Spot">
            <define name="SPOTLIGHT" />
            <define name="LIGHT" />
        </variation>
        <variation name="Point">
            <define name="POINTLIGHT" />
            <define name="LIGHT" />
        </variation>
        <option name="Mask" define="CUBEMASK" require="POINTLIGHT" />
        <option name="Negative" define="NEGATIVE" exclude="Spec" />
        <option name="Spec" define="SPECULAR" />
    </shader>
</shaders>
